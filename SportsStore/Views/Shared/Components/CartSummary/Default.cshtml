@model Cart
<div class="">
    @if (Model.Lines.Count() > 0)
            {
                <!--TODO made the border match the rest of the nav bar-->
                <small class="navbar-text text-white border">
                    <b>Your cart:</b>
                    @Model.Lines.Sum(x => x.Quantity) items(s)
                    @Model.ComputeTotalValue().ToString("c")
                </small>
            }
    <a class="btn btn-sm btn-dark" 
       asp-controller="Cart" asp-action="Index"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <!--TODO unify button styling with the rest of the navigation bar-->
        <i class="fa fa-shopping-basket" style="color:white">Shopping Cart</i>
    </a>
</div>
